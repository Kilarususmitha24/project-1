  <main>
    <div class="goal-container">
      <h2>ðŸ“… Set Your Yearly Reading Goal</h2>
      <input type="number" id="goalInput" placeholder="Enter number of books you want to read">
      <button onclick="setGoal()">Set Goal</button>
      <p id="goalDisplay"></p>
    </div>
  </main>

  <script>
    function setGoal() {
      const goal = document.getElementById('goalInput').value;
      localStorage.setItem('readingGoal', goal);
      document.getElementById('goalDisplay').textContent = `ðŸŽ¯ Your reading goal is ${goal} books this year!`;
    }

    window.onload = () => {
      const goal = localStorage.getItem('readingGoal');
      if (goal) {
        document.getElementById('goalDisplay').textContent = `ðŸŽ¯ Your reading goal is ${goal} books this year!`;
      }
    };
  </script>
